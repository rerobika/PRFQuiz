{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "quiz-api - nodemon",
      "cwd": "${workspaceFolder}/quiz-api",
      "runtimeExecutable": "${workspaceFolder}/quiz-api/node_modules/.bin/nodemon",
      "runtimeArgs": [
          "--nolazy",
          "--exec",
          "${workspaceFolder}/quiz-api/node_modules/.bin/babel-node"
      ],
      "program": "${workspaceFolder}/quiz-api/src/index.js",
      "restart": true,
      "protocol": "inspector",
      "stopOnEntry": false,
      "sourceMaps": true,
      "showAsyncStacks": true,
      "console": "internalConsole",
      "internalConsoleOptions": "neverOpen",
      "env": {
          "BABEL_ENV": "development"
      }
    }
  ]
}
